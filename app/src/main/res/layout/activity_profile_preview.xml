<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:orientation="vertical"
    tools:context="com.chatonx.chat.activities.ProfilePreviewActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="260dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/linearLayout4"
            android:background="@drawable/ripple_row"
            android:clickable="true">

            <ImageView
                android:id="@+id/userProfilePicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image4"
                android:background="#3f000000"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#5f000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:id="@+id/linearLayout3">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"
                android:padding="5dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/actionProfileArea"
        android:layout_below="@+id/linearLayout4"
        android:background="@drawable/ripple_row"
        android:clickable="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/chat"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/teal"
                        app:srcCompat="@drawable/ic_action_chat"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/teal"
                        app:srcCompat="@drawable/ic_call"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/video"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/teal"
                        app:srcCompat="@drawable/ic_video"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/info"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:tint="@color/teal"
                        app:srcCompat="@drawable/ic_action_about"
                        android:layout_gravity="center"/>
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>

</LinearLayout>
